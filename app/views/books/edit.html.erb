<div class="container">
	<ul>
		<% @book.errors.full_messages.each do |message| %>
	 		<li>error! <%= message %></li>
    	<% end %>
	</ul>
	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title %>
				<h4>Opinion</h4>
				<%= f.text_area :body %>
				<br>
				<input type="submit" name="commit" value="Update Book" class="btn btn-primary col-xs-12" data-disable-with="Update Book">
			<% end %>
			<%= link_to "Show", book_path(@book) %>
						|
			<a href="/books">Back</a>
		</div>
	</div>
</div>