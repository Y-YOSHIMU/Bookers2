<ul>
	<% @book.errors.full_messages.each do |message| %>
	 <li>error! <%= message %></li>
    <% end %>
</ul>
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-3">
			<%= render partial: "users/sidemenu", locals: { user: current_user, book: @book} %>
		</div>
		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr>
						<th>
							<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
						</th>
						<th>
							<%= link_to book_path(book.id) do %>
								<%= book.title %>
							<% end %>
						</th>
						<th>
							<%= book.body %>
						</th>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>