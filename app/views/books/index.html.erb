<h1>Books</h1>

<table>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<th>
				<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			</th>
			<th>
				<%= link_to book_path(book.id) do %>
					<%= book.title %>
				<% end %>
			</th>
			<th>
				<%= book.body %>
			</th>
		</tr>
	<% end %>
</table>
