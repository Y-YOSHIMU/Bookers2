<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render partial: "users/sidemenu", locals: { user: @book.user, book: @book} %>
		</div>
		<div class="col-lg-9">
			<h1>Book detail</h1>
			<table class="table">
				<tr>
					<td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
					<td>
						<%= @book.title %>
					</td>
					<td>
						<%= @book.body %>
					</td>
					<td>
						<% if @book.user == current_user %>
			   				<%= link_to "Edit", edit_book_path(@book) %>
			  			<% end %>
			  		</td>
					<td>
						<% if @book.user == current_user %>
							<%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>