<% if flash[:notice] %>
<p class="notice"><%= notice %></p>
<% end %>
<% if flash[:alert] %>
<p class="alert"><%= alert %></p>
<% end %>
<div class="container">
	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">
			<h1>welcome to 
				<span class="glyphicon glyphicon-book"><strong>Bookers</strong>!!</span>
			</h1>
			<p>in Bookers,<br>
			you can share and exchange your opinions , inpressions , and emotions<br>
			about various books!
			</p>
			<div class="btn-wrapper">
				<div class="row">
					<p>
						<%= link_to "Log in", new_user_session_path %>
						<!--<a class="btn btn-info col-xs-10 col-xs-offset-1 sign_in" href="/users/sign_in">
							Log in
						</a>-->
					</p>
				</div>
				<div class="row">
					<p>
						<% if user_signed_in? %>
						<%= link_to "Sign Up", user_path(current_user) %>
						<% else %>
						<%= link_to "Sign Up", new_user_registration_path %>
						<% end %>
						<!--<a class="btn btn-success col-xs-10 col-xs-offset-1 sign_up" href="/users/sign_up">
							Sign Up
						</a>-->
					</p>
				</div>
			</div>
		</div>
	</div>
</div>