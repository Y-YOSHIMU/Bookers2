<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<%= render partial: "sidemenu", locals: { user: @user, book: @book} %>
		</div>
		<div class="col-lg-8">
			<h1>Books</h1>
			<table>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<th></th>
					<th><%= book.title %></th>
					<th><%= book.body %></th>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>