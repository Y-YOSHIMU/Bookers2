<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render partial: "users/sidemenu", locals: { user: @user, book: @book} %>
		</div>
		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<th>
							<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
						</th>
						<th>
							<%= link_to book_path(book.id) do %>
								<%= book.title %>
							<% end %>
						</th>
						<th>
							<%= book.body %>
						</th>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>