<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>
<div class="profile-container">
<h1>User info</h1>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
	<table>
		<tbody>
			<tr>
				<td>name</td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td>introduction</td>
				<td><%= @user.introduction %></td>
			</tr>
		</tbody>
	</table>
</div>
<p><%= link_to "Edit", edit_user_path(@user) %></p>

<h1>New book</h1>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Opinion</h4>
	<%= f.text_area :body %>
	<%= f.submit "Create Book" %>
<% end %>

<h1>Books</h1>

<table>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<th></th>
		<th><%= book.title %></th>
		<th><%= book.body %></th>
	</tr>
	<% end %>
</table>