<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
			<% end %>
			<div class="profile-container">
			<h1>User info</h1>
				<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr>
							<td>name</td>
							<td><%= user.name %></td>
						</tr>
						<tr>
							<td>introduction</td>
							<td><%= user.introduction %></td>
						</tr>
					</tbody>
				</table>
			</div>
			<%= link_to edit_user_path(user) do %>
			<button type="button" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
			<% end %>

			<h1>New book</h1>
			<%= form_for(book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title %>
				<h4>Opinion</h4>
				<%= f.text_area :body %>
				<br>
				<input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
			<% end %>
		</div>
	</div>
</div>
