<h1>User info</h1>
<ul>
    <% @user.errors.full_messages.each do |message| %>
        <li>error! <%= message %></li>
    <% end %>
 </ul>

<div class="edit-container">
	<%= form_for(@user) do |f| %>
	<h4>Name</h4>
	<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前" %>
	<h4>Image</h4>
	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	<h4>Inrtoduction</h4>
	<%= f.text_area :introduction, class:"form-control",rows:"3", placeholder:"自己紹介文" %>
	<br>
	<%= f.submit 'Update User' %>

	<% end %>
</div>