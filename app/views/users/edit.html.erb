<h1>User info</h1>

<div class="edit-container">
	<%= form_for(@user) do |f| %>
	<h4>Name</h4>
	<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前" %>
	<h4>Image</h4>
	<%= f.attachment_field :image %>
	<h4>Inrtoduction</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Update User' %>

	<% end %>
</div>